{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "0.0.1",
  "content_scripts": [{
      "matches": [
         "http://*.vk.com/*",
         "https://*.vk.com/*"
      ],
      "js": [
         "lib/jquery-1.8.1.min.js",
         "lib/jquery.class.js",
         "lib/jquery.center.js",

         "config/config.js",

         "core.js",
         
         "helpers/db.js",
         "helpers/ajax.js",
         "helpers/notifications.js",
         "helpers/translate.js",
         "helpers/vkontakteDOM.js",
         "helpers/vkontakteHover.js",

         "recources/lang/en.json",
         "recources/lang/ru.json",

         "modules/base.js",
         "modules/vkontakte.js",

         "startpoints/start.js"
      ],
      "css": [
         "css/common.css",
         "css/login.css",
         "css/main.css"
      ]
  }],
  "browser_action": {
    "default_icon": "images/icon_128.png",
    "default_title": "Youhonest",
    "default_popup": "popup/popup.html"
  },
  "icons": {
      "16": "images/icon_16.png",
      "48": "images/icon_48.png",
      "128": "images/icon_128.png"
  },

  "options_page": "options.html",
  "background": {
      "scripts": ["background/background.js"]
  },

  "permissions": [
     "tabs",
     "http://*/",
     "http://*/*",
     "https://*/"
  ],
  "content_security_policy": "script-src 'self' https://vk.com; object-src 'self'"
}